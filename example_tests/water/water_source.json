{
  "flintVersion": "0.1",
  "name": "water_source_block",
  "description": "Verify that a water source block can be placed and detected",
  "tags": ["water"],
  "dependencies": ["basic_block_placement"],
  "setup": {
    "cleanup": {
      "region": [[0, 95, 0], [14, 105, 14]]
    }
  },
  "timeline": [
    {
      "at": 1,
      "do": "fill",
      "region": [[5, 100, 5], [10, 100, 10]],
      "with": "minecraft:glass"
    },
    {
      "at": 2,
      "do": "place",
      "pos": [7, 101, 7],
      "block": "minecraft:water"
    },
    {
      "at": 4,
      "do": "assert",
      "checks": [
        {"pos": [7, 101, 7], "is": "minecraft:water"}
      ]
    },
    {
      "at": 4,
      "do": "assert_state",
      "pos": [7, 101, 7],
      "state": "level",
      "values": ["0"]
    }
  ]
}
