{
    "name": "fence_connects_to_block",
    "description": "Verify that an oak fence connects to a solid block placed adjacent to it",
    "tags": ["fences"],
    "dependencies": ["basic_block_placement"],
    "setup": {
        "cleanup": {
            "region": [[-5, 95, -5], [5, 105, 5]]
        }
    },
    "timeline": [
        {
            "at": 0,
            "do": "place",
            "pos": [0, 100, 0],
            "block": {"id": "minecraft:oak_fence"}
        },
        {
            "at": 1,
            "do": "assert",
            "checks": [
                {"pos": [0, 100, 0], "is": {"id": "minecraft:oak_fence", "east": "false", "west": "false"}}
            ]
        },
        {
            "at": 2,
            "do": "place",
            "pos": [1, 100, 0],
            "block": {"id": "minecraft:stone"}
        },
        {
            "at": 4,
            "do": "assert",
            "checks": [
                {"pos": [0, 100, 0], "is": {"id": "minecraft:oak_fence", "east": "true"}}
            ]
        }
    ]
}
