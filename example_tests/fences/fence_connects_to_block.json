{
  "flintVersion": "0.1",
  "name": "fence_connects_to_block",
  "description": "Verify that an oak fence connects to a solid block placed adjacent to it",
  "tags": ["fences"],
  "dependencies": ["basic_block_placement"],
  "setup": {
    "cleanup": {
      "region": [[-5, 95, -5], [5, 105, 5]]
    }
  },
  "timeline": [
    {
      "at": 1,
      "do": "place",
      "pos": [0, 100, 0],
      "block": "minecraft:oak_fence"
    },
    {
      "at": 2,
      "do": "assert",
      "checks": [
        {"pos": [0, 100, 0], "is": "minecraft:oak_fence"}
      ]
    },
    {
      "at": 2,
      "do": "assert_state",
      "pos": [0, 100, 0],
      "state": "east",
      "values": ["false"]
    },
    {
      "at": 2,
      "do": "assert_state",
      "pos": [0, 100, 0],
      "state": "west",
      "values": ["false"]
    },
    {
      "at": 3,
      "do": "place",
      "pos": [1, 100, 0],
      "block": "minecraft:stone"
    },
    {
      "at": 5,
      "do": "assert_state",
      "pos": [0, 100, 0],
      "state": "east",
      "values": ["true"]
    }
  ]
}
